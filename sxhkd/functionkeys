/* super + Return */
/* 	alacritty */

super + v
    killall ranger;\
    alacritty -e ranger
super + b
	brave 2> /dev/null

/* super + d */
/* 	rofi -show drun */

super + Escape
	pkill -USR1 -x sxhkd

XF86MonBrightnessUp
	xbacklight -inc 2

XF86MonBrightnessDown
	xbacklight -dec 2

XF86AudioRaiseVolume
	amixer set Master 1%+

XF86AudioLowerVolume
	amixer set Master 1%-

XF86AudioMute
	amixer set Master toggle

XF86AudioMicMute
	amixer set Capture toggle

control + shift + Print
    scrot -z -e 'xclip -selection clipboard -t image/png -i $f'

control + Print
    scrot -z -s -e 'xclip -selection clipboard -t image/png -i $f'

alt + Print
	scrot -s "$HOME/Pictures/%T-%d-%m-%Y.png"

alt + shift + Print
	scrot  "$HOME/Pictures/%T-%d-%m-%Y.png"

